<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GesSchool!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.tailwindcss.com/"></link>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        {%  block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {%  block javascripts %}
            {{ encore_entry_script_tags('app') }}            
        {% endblock %}

    </head>
    



    <body class="bg-gray-300"> 
        
        <nav class="flex items-center justify-between flex-wrap bg-sky-800 p-2" style="background-color: #1c74bb;">
            <div class="flex items-center flex-shrink-0 text-white mr-6">
                <img src="{{asset('images/logo.png')}}" alt="Logo" class="h-20 w-30 mr-2">   
            </div>

            <div class="block lg:hidden">
                <button id="menu-toggle" class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
                    <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
                </button>
            </div>
            
            <div id="menu" class="w-full hidden flex-grow lg:flex lg:items-center lg:w-auto">
                <ul class="flex flex-col lg:flex-row list-none lg:ml-auto">
                    <li class="nav-item">
                        <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full" href="{{ path('app_ecole') }}">
                            <div class="flex items-center relative cursor-pointer whitespace-nowrap">Ecole</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full" href="{{ path('app_mon_profil') }}">
                            <div class="flex items-center relative cursor-pointer whitespace-nowrap">Mon Profil</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full" href="{{ path('app_logout') }}">
                            <div class="flex items-center relative cursor-pointer whitespace-nowrap">Déconnexion</div>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>






        {% block body %}
            


        {% endblock %}
        

        <!--Footer container-->
        <!--Footer à modifier car non responsive et reste en haut pour quel page-->

        <!--
        <footer class="absolute inset-x-0 bottom-0 bg-neutral-200 text-center text-white dark:bg-neutral-600 dark:text-neutral-200">
        <!--Copyright section-->
        <!--    <div
                class="bg-neutral-300 p-4 text-center text-neutral-700 dark:bg-neutral-700 dark:text-neutral-200">
                © 2023 Copyright:
                <a class="dark:text-neutral-400" href="https://tailwind-elements.com/"
                >Sefa GUNENDI</a
                >
            </div>
        </footer>
        -->
       
        <script>
            document.getElementById('menu-toggle').addEventListener('click', function() {
                document.getElementById('menu').classList.toggle('hidden');
            });
            // Initialization for ES Users
            import {
            Input,
            initTE,
            } from "tw-elements";

            initTE({ Input });
        </script>
    </body>
</html>
