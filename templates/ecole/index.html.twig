{% extends 'base.html.twig' %}



{% block title %}Liste des écoles{% endblock %}


{% block body %}






    <h1 class="mb-2 mt-0 text-5xl font-medium leading-tight text-primary">
    Liste des écoles
    </h1>
    <a href="{{ path('ecole_add') }}"  class="inline-block px-4 py-2 leading-none border rounded text-white bg-yellow-500 hover:bg-yellow-600 mt-4 lg:mt-0">
        Ajouter une école
    </a>
    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <table class="min-w-full text-left text-sm font-light">
                <thead class="border-b font-medium dark:border-neutral-500">
                    <tr>
                    <th scope="col" class="px-6 py-4">#</th>
                    <th scope="col" class="px-6 py-4">Nom</th>
                    <th scope="col" class="px-6 py-4">Ville</th>
                    <th scope="col" class="px-6 py-4">Email</th>
                    <th scope="col" class="px-6 py-4">Détails</th>
                    <th scope="col" class="px-6 py-4">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ecole in ecoles %}
                    <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-550">
                    <td class="whitespace-nowrap px-6 py-4 font-medium">{{ ecole.getId() }}</td>
                    <td class="whitespace-nowrap px-6 py-4">{{ ecole.getNomEcole }}</td>
                    <td class="whitespace-nowrap px-6 py-4">{{ ecole.getVilleEcole }}</td>
                    <td class="whitespace-nowrap px-6 py-4">{{ ecole.getMailEcole }}</td>
                    <td class="whitespace-nowrap px-6 py-4">
                        <a href="{{ path('app_ecole_show', {'id': ecole.getId()}) }}" class="inline-block px-4 py-2 leading-none border rounded text-white bg-blue-500 hover:bg-blue-600 mt-4 lg:mt-0">
                            Détails
                        </a>
                    </td>  
                    <td class="whitespace-nowrap px-6 py-4">
                        <a href="{{ path('app_ecole_delete', {'id': ecole.getId()}) }}" class="delete-school inline-block px-4 py-2 leading-none border rounded text-white bg-red-500 hover:bg-red-600 mt-4 lg:mt-0" data-id="{{ ecole.getId() }}">                         
                            Supprimer
                        </a>
                    </td>          
                    </tr>
                    {% endfor %}
                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>

{% endblock %}




